#include <stdint.h>
#include "stm32f407xx.h"

#define BV(n) (1 << (n))

// Function Prototypes
void led_init(void);
void led_on(void);
void led_off(void);
void DelayMs(uint32_t ms);

int main(void)
{
    led_init();
    while(1)
    {
        led_on();
        DelayMs(1000);
        led_off();
        DelayMs(1000);
    }
}

void led_init(void)
{
    // 0. Enable clock for GPIOD (Port D is on AHB1, bit 3)
    RCC->AHB1ENR |= BV(3);

    // 1. Select mode as output (01) for pins 12, 13, 14, 15
    GPIOD->MODER &= ~(BV(25) | BV(27) | BV(29) | BV(31));
    GPIOD->MODER |=  (BV(24) | BV(26) | BV(28) | BV(30));

    // 2. Select output type as Push-Pull (0)
    GPIOD->OTYPER &= ~(BV(12) | BV(13) | BV(14) | BV(15));

    // 3. Select speed as Low (00)
    GPIOD->OSPEEDR &= ~(BV(24) | BV(25) | BV(26) | BV(27) | BV(28) | BV(29) | BV(30) | BV(31));

    // 4. Select no pull-up, no pull-down (00)
    GPIOD->PUPDR &= ~(BV(24) | BV(25) | BV(26) | BV(27) | BV(28) | BV(29) | BV(30) | BV(31));
}

void led_on(void)
{
    // Set pins 12, 13, 14, 15 high
    GPIOD->ODR |= (BV(12) | BV(13) | BV(14) | BV(15));
}

void led_off(void)
{
    // Clear pins 12, 13, 14, 15 low
    GPIOD->ODR &= ~(BV(12) | BV(13) | BV(14) | BV(15));
}

// Simple busy-wait delay function
void DelayMs(uint32_t ms)
{
    // Approximate delay for 16MHz internal clock
    for(uint32_t i = 0; i < (ms * 1600); i++) {
        __NOP();
    }
}








